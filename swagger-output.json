    "/submissions/history": {
  "get": {
    "description": "Get submission history with optional filters",
    "parameters": [
      {
        "name": "authorization",
        "in": "header",
        "type": "string",
        "required": true
      },
      {
        "name": "completedDate",
        "in": "query",
        "type": "string",
        "format": "date",
        "description": "Filter submissions by a specific date (YYYY-MM-DD)"
      },
      {
        "name": "from",
        "in": "query",
        "type": "string",
        "format": "date",
        "description": "Start date for range filter (YYYY-MM-DD)"
      },
      {
        "name": "to",
        "in": "query",
        "type": "string",
        "format": "date",
        "description": "End date for range filter (YYYY-MM-DD)"
      },
      {
        "name": "subject",
