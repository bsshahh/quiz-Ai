    "/auth/login": {
      "post": {
        "description": "Authenticate a user (new/exist both) with username, email and password. Returns JWT token.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "required": ["username","email","password"],
              "properties": {
                "username": {
                  "example": "alex_carse"
                },
                "email": {
                  "example": "alex@example.com"
                },
                "password": {
                  "example": "my123"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful, returns JWT token"
          },
           "400": {
        "description": "Validation error"
      },
      "401": {
        "description": "Invalid credentials"
      },
      "500": {
        "description": "Internal Server Error"
      }
        }
      }
    },
    "/quizzes/generate": {
      "post": {
        "description": "Generate a new AI-powered quiz.",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "required":true,
            "type": "string",
            "description": "Bearer JWT token (e.g., 'Bearer <your_token_here>')"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "required": ["subject", "gradeLevel", "difficulty", "totalQuestions"],
              "properties": {
                "subject": {
              "type": "string",
              "example": "Mathematics"
            },
            "gradeLevel": {
              "type": "number",
              "example": 5
            },
            "difficulty": {
              "type": "string",
              "example": "medium"
            },
            "totalQuestions": {
              "type": "number",
              "example": 10
            },
            "title": {
              "type": "string",
              "example": "AI Generated Quiz for Math"
            }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
