        "type": "string",
        "description": "Filter submissions by subject"
      },
      {
        "name": "grade",
        "in": "query",
        "type": "string",
        "description": "Filter submissions by grade level"
      },
      {
        "name": "minMarks",
        "in": "query",
        "type": "integer",
        "description": "Filter submissions with minimum marks"
      }
    ],
    "responses": {
      "200": {
        "description": "List of submissions returned successfully"
      },
